<% @page_title = 'Sign Up' %>
<h1>Sign Up</h1>
<p>
	<%= form_for @user do |f|%>
		<p> Name: <br> <%= f.text_field :name %> </p>
		<p> Email: <br> <%= f.text_field :email %> </p>
		<p> Password: <br> <%= f.password_field :password %> </p>
		<p> Confirm Password: <br> <%= f.password_field :password %> </p>
		<%= f.submit :Signup %>
	<% end %>
	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |error_message| %>
			<%= error_message %> <br>
		<% end %>
	<% end %>
</p>